    <button class="btn-novo-item" onclick="resetForm()">Pedir Outro Açaí (Limpar Seleção)</button>

    <div id="carrinho">
        <h2 style="color: var(--roxo-escuro); border-bottom: 2px solid var(--roxo-escuro);">Seu Carrinho</h2>
        <div id="itens-carrinho"></div>
        
        <div class="card" style="background: #f9f9f9; color: #333; margin-top: 20px; border: 1px solid #ddd;">
            <h3>Forma de Pagamento</h3>
            <select id="pagamento" onchange="verificarDinheiro()">
                <option value="">Selecione...</option>
                <option value="PIX">PIX</option>
                <option value="CARTÃO">CARTÃO</option>
                <option value="DINHEIRO">DINHEIRO</option>
            </select>

            <div id="sessao-troco" class="hidden">
                <p>Precisa de troco?</p>
                <label><input type="radio" name="troco_sn" value="Sim" onclick="toggleTrocoInput(true)"> Sim</label>
                <label><input type="radio" name="troco_sn" value="Não" onclick="toggleTrocoInput(false)" checked> Não</label>
