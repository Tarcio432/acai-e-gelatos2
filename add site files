<script>
    const acompanhamentos = ["Ovomaltine", "Jujuba", "Gotas de chocolate", "Gotas de chocolate zero lactose", "MM", "Cereal ball zero lactose", "Marshmallows", "Granola", "Granola zero açúcar", "Leite em pó ninho", "Farinha láctea", "Amendoim triturado", "Paçoca", "Sucrilhos", "Cereal de chocolate", "Cereal colorido", "Flocos de arroz", "Tub-in", "Nutella", "Chocolate em pó 50% cacau"];
    let carrinho = [];
    const taxa = 0.00; 

    const containerAcomp = document.getElementById('lista-acomp');
    acompanhamentos.forEach(a => {
        containerAcomp.innerHTML += `<label class="option-item"><input type="checkbox" name="acomp" value="${a}" onclick="validarLimite(this)"> ${a}</label>`;
    });

    function validarLimite(cb) {
        const tam = document.querySelector('input[name="tamanho"]:checked');
        if(!tam) { 
            alert("Por favor, selecione o TAMANHO antes de escolher os acompanhamentos!"); 
            cb.checked = false; 
            return; 
        }
        const limite = parseInt(tam.dataset.limite);
        const qtd = document.querySelectorAll('input[name="acomp"]:checked').length;
        if(qtd > limite) { 
            alert(`Limite de ${limite} acompanhamentos atingido para este tamanho!`); 
            cb.checked = false; 
        }
        document.getElementById('count-acomp').innerText = document.querySelectorAll('input[name="acomp"]:checked').length;
    }

    function tentarAdicionarAutomatico() {
        const tam = document.querySelector('input[name="tamanho"]:checked');
        const creme = document.querySelector('input[name="creme"]:checked');
        const cob = document.querySelector('input[name="cobertura"]:checked');

        if(tam && creme && cob) {
            adicionarAoCarrinho(tam, creme, cob);
        } else {
            alert("Para adicionar ao carrinho, escolha primeiro o Tamanho e o Creme!");
            document.querySelectorAll('input[name="cobertura"]').forEach(c => c.checked = false);
        }
    }

    function adicionarAoCarrinho(tam, creme, cob) {
        let pFrutas = 0;
        let nFrutas = [];
        document.querySelectorAll('input[name="fruta"]:checked').forEach(f => {
            pFrutas += parseFloat(f.dataset.preco);
            nFrutas.push(f.value);
        });

        const item = {
            id: Date.now(),
            tamanho: `${tam.value}ml`,
            tipo: document.querySelector('input[name="tipo"]:checked').value,
            acomp: Array.from(document.querySelectorAll('input[name="acomp"]:checked')).map(a => a.value).join(', '),
            creme: creme.value,
            frutas: nFrutas.join(', ') || 'Nenhuma',
            cobertura: cob.value,
            preco: parseFloat(tam.dataset.preco) + pFrutas
        };

        carrinho.push(item);
        renderCarrinho();
        resetForm();
        document.getElementById('carrinho').scrollIntoView({ behavior: 'smooth' });
    }

    function renderCarrinho() {
        const div = document.getElementById('itens-carrinho');
        let subtotal = 0;
        div.innerHTML = "";
        
        carrinho.forEach(i => {
            subtotal += i.preco;
            div.innerHTML += `
                <div class="item-carrinho">
                    <div>
                        <strong>${i.tamanho} - ${i.tipo}</strong><br>
                        <small>Creme: ${i.creme} | Frutas: ${i.frutas} | Cobertura: ${i.cobertura}</small><br>
                        <small style="color:var(--roxo-claro)">Acomp: ${i.acomp || 'Nenhum'}</small><br>
                        <strong>R$ ${i.preco.toFixed(2)}</strong>
                    </div>
                    <button class="btn-remover" onclick="remover(${i.id})">Remover</button>
                </div>`;
        });
        
        const totalFinal = carrinho.length > 0 ? subtotal + taxa : 0;
        document.getElementById('valor-total').innerText = totalFinal.toFixed(2);
    }

    function remover(id) {
        carrinho = carrinho.filter(i => i.id !== id);
        renderCarrinho();
    }

    function resetForm() {
        document.querySelectorAll('input[name="tamanho"], input[name="creme"], input[name="cobertura"], input[name="acomp"], input[name="fruta"]').forEach(i => i.checked = false);
        document.querySelectorAll('input[name="tipo"]').forEach(i => {
            if(i.value === "Tradicional") i.checked = true;
        });
        document.getElementById('count-acomp').innerText = "0";
    }

    function verificarDinheiro() {
        const pag = document.getElementById('pagamento').value;
        document.getElementById('sessao-troco').className = pag === 'DINHEIRO' ? '' : 'hidden';
    }

    function toggleTrocoInput(show) {
        document.getElementById('input-valor-troco').className = show ? '' : 'hidden';
    }

    function finalizarPedido() {
        const nome = document.getElementById('nome').value;
        const endereco = document.getElementById('endereco').value;
        const complemento = document.getElementById('complemento').value;
        const pagamento = document.getElementById('pagamento').value;
        const total = parseFloat(document.getElementById('valor-total').innerText);

        if(!nome || !endereco) { alert("Informe seu nome e endereço!"); return; }
        if(carrinho.length === 0) { alert("Seu carrinho está vazio!"); return; }
        if(!pagamento) { alert("Escolha a forma de pagamento!"); return; }

        let infoTroco = "";
        if(pagamento === "DINHEIRO") {
            const querTroco = document.querySelector('input[name="troco_sn"]:checked').value;
            if(querTroco === "Sim") {
                const valorTroco = parseFloat(document.getElementById('valor-troco').value);
                if(isNaN(valorTroco) || valorTroco <= total) {
                    alert("O valor do troco deve ser MAIOR que o total do pedido!");
                    return;
                }
                infoTroco = `\n*Troco para:* R$ ${valorTroco.toFixed(2)}`;
            }
        }

        let texto = `*NOVO PEDIDO - AÇAÍ E GELATOS*\n\n`;
        texto += `*--- DADOS DO CLIENTE ---*\n`;
        texto += `*Nome:* ${nome}\n`;
        texto += `*Endereço:* ${endereco}\n`;
        texto += `*Complemento:* ${complemento || 'N/A'}\n\n`;

        texto += `*--- ITENS DO PEDIDO ---*\n`;
        carrinho.forEach((i, index) => {
            texto += `*${index + 1}. Item:* ${i.tamanho} (${i.tipo})\n`;
            texto += `   *Acompanhamentos:* ${i.acomp || 'Nenhum'}\n`;
            texto += `   *Creme:* ${i.creme}\n`;
            texto += `   *Frutas:* ${i.frutas}\n`;
            texto += `   *Cobertura:* ${i.cobertura}\n`;
            texto += `   *Valor:* R$ ${i.preco.toFixed(2)}\n\n`;
        });

        texto += `*--- PAGAMENTO E TOTAL ---*\n`;
        texto += `*Forma de Pagamento:* ${pagamento}${infoTroco}\n`;
        texto += `*Taxa de Entrega:* A combinar por bairro\n`;
        texto += `*TOTAL DOS PRODUTOS: R$ ${total.toFixed(2)}*\n\n`;
        texto += `_Por favor, aguarde a confirmação da taxa de entrega para o seu bairro._`;

        const url = `https://wa.me/5582993756380?text=${encodeURIComponent(texto)}`;
        window.open(url, '_blank');
    }
</script>

</body>
</html>
